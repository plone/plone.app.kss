<configure xmlns="http://namespaces.zope.org/zope"
           xmlns:browser="http://namespaces.zope.org/browser"
           xmlns:five="http://namespaces.zope.org/five"
           xmlns:kss="http://namespaces.zope.org/kss"
           xmlns:zcml="http://namespaces.zope.org/zcml"
           >
           
     <!-- This is needed during the manual creation
          of a site, to run selenium tests. Not needed for
          the normal or functional unittests. 

          The access control makes sure that only site
          managers can run this method.

          The method needs to be run on a newly created portal.
      -->

     <browser:page
         for="kss.demo.interfaces.ISimpleContent"
         class=".site_creation_view.SiteCreationView"
         name="kss_test_create_site"
         permission="zope2.View"
         />
         
     <browser:page
         for="kss.demo.interfaces.ISimpleContent"
         template="plone-site-creation-ui.pt"
         name="plone-site-creation-ui.html"
         permission="zope2.View"
         />
         
     <browser:page
         for="OFS.interfaces.IApplication"
         class=".bootstrap.Bootstrap"
         name="kss_test_bootstrap"
         permission="zope2.View"
         />
 
     <!-- XXX temporary: selenium test zuite resources -->
     <browser:resourceDirectory
         name="static-plone-tests"
         directory="selenium_tests"
         />

     <browser:resource
         name="test-create-site-suite.html"
         file="test-create-site-suite.html"
         />

     <browser:page
         for="kss.demo.interfaces.ISimpleContent"
         template="static-plone-suite.pt"
         name="static-plone-suite.html"
         permission="zope2.View"
         />
 

    <!-- Set up the demo utility -->
    <configure zcml:condition="have kss_demo_version_1_2">
      <utility
        name="plone.app.kss.tests"
        factory=".zopeconfig.PloneDemos"
        provides="kss.demo.interfaces.IKSSDemoResource"
        permission="zope.Public"
        />
    </configure>



</configure>
